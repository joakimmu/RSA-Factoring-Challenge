#!/usr/bin/python3
from sys import argv
import math

# This script factorizes numbers into a product of two smaller numbers


def find_factors(number):
    # Function to find the factors of a given number
    factors = []
    divisor = 2
    while number > 1:
        if number % divisor == 0:
            factors.append(divisor)
            number //= divisor
        else:
            divisor += 1
    return factors


def factorize_numbers(file_path):
    # Reads numbers from a file and prints their factors
    with open(file_path, encoding="utf-8") as file:
        # Read each line from the file
        for line in file.readlines():
            # Convert each line to an integer
            number = int(line.strip())
            # Find factors for the integer using the find_factors function
            factors = find_factors(number)
            # Print factors
            print(f"{number}={'*'.join(map(str, factors))}")


if __name__ == "__main__":
    # Run the factorization process for the file provided as command-line argument
    factorize_numbers(argv[1])
